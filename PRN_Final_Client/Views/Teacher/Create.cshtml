<h1>Create New Teacher</h1>

@if (!String.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>
}

<form method="post" action="@Url.Action("Create", "Teacher")">
    <div class="form-group">
        <label for="Mail">Mail:</label>
        <input type="email" class="form-control" id="Mail" name="Mail" placeholder="Enter teacher mail" required>
    </div>
    <div class="form-group">
        <label for="Password">Password:</label>
        <input type="password" class="form-control" id="Password" name="Password" placeholder="Enter teacher password" required>
    </div>
