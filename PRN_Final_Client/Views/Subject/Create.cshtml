@{
    List<Class> classesList = (List<Class>)ViewData["ClassesList"];
}

<h1>Create New Class</h1>

@if (!String.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>
}

<form method="post" action="@Url.Action("Create", "Subject")">
    <div class="form-group">
        <label for="SubjectName">SubjectName:</label>
        <input type="text" class="form-control" id="SubjectName" name="SubjectName" placeholder="Enter subject name" required>
    </div>
    <div class="form-group">
        <label for="class">Class:</label>
        <select class="form-control" id="ClassId" name="ClassId" required>
            @foreach (var classS in classesList)
            {
                <option value="@classS.ClassId">@classS.ClassName</option>
            }
        </select>
    </div>
